{
  "name": "@konsumation/frontend-svelte",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "description": "svelte web frontend for konsum",
  "keywords": [
    "example",
    "konsum",
    "svelte",
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    },
    {
      "name": "Konstantin Karpman"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "vite build",
    "startkonsum": "node_modules/konsum/src/konsum-cli.mjs -c tests/config start",
    "start": "vite",
    "test": "npm run test:ava && npm run test:cafe",
    "test:cafe": "testcafe $BROWSER:headless tests/cafe/*.js -s build/test --app-init-delay 7000 --app \"vite preview\"",
    "test:ava": "ava --timeout 2m tests/*-ava.mjs tests/*-ava-node.mjs",
    "lint": "npm run lint:css",
    "lint:css": "stylelint ./src/*.css",
    "cafeHead": "testcafe chrome tests/cafe/deleteValues.js -s build/test",
    "preview": "vite preview"
  },
  "dependencies": {
    "@kronos-integration/svelte-components": "^2.4.93",
    "imask": "^6.4.2",
    "layercake": "^7.0.0",
    "mf-styling": "^1.7.33",
    "npm-dep-graph": "^1.0.61",
    "streamsaver": "^2.0.6",
    "svelte-command": "^1.1.29",
    "svelte-common": "^4.21.13",
    "svelte-entitlement": "^1.2.41",
    "svelte-guard-history-router": "^5.5.20",
    "svelte-log-view": "^4.2.14",
    "svelte-session-manager": "^2.0.11",
    "svelte-websocket-store": "^1.1.33",
    "the-new-css-reset": "^1.8.2"
  },
  "devDependencies": {
    "@konsumation/konsum": "^6.1.7",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@sveltejs/vite-plugin-svelte": "^2.0.2",
    "ava": "^5.1.1",
    "npm-pkgbuild": "^11.0.5",
    "semantic-release": "^20.0.2",
    "stylelint": "^14.16.1",
    "stylelint-config-standard": "^29.0.0",
    "svelte": "^3.55.1",
    "testcafe": "^2.2.0",
    "vite": "^4.0.4"
  },
  "optionalDependencies": {
    "mf-hosting-cloudflare": "^1.0.5",
    "mf-hosting-frontend": "^1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/konsumation/konsum-frontend-svelte"
  },
  "bugs": {
    "url": "https://github.com/konsumation/konsum-frontend-svelte/issues"
  },
  "homepage": "https://github.com/konsumation/konsum-frontend-svelte#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": "build/",
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf"
    },
    "hooks": "pkg/hooks.sh",
    "depends": {
      "konsum": ">=6.1.16",
      "entitlement-provider": ">=2.9.121"
    },
    "frontend": true,
    "http.api.path": "${http.path}/api",
    "http.path": "${http.base.path}/konsum",
    "install.dir": "${install.base.dir}konsum/frontend/",
    "name": "konsum-frontend-svelte",
    "title": "Konsum"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "Debian Package"
            },
            {
              "path": "dist/*.pkg.*",
              "label": "Arch Linux Package"
            },
            {
              "path": "dist/*.rpm",
              "label": "RPM"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "properties": {
      "testcafe": {
        "options": "--app-init-delay 7000"
      }
    },
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-ava",
      "arlac77/template-cloudflare",
      "arlac77/template-pacman",
      "arlac77/template-svelte-app",
      "arlac77/template-testcafe",
      "konsumation/template"
    ]
  }
}
