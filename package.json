{
  "name": "konsum-frontend-svelte",
  "version": "0.0.0-semantic-release",
  "description": "svelte web frontend for konsum",
  "scripts": {
    "deploy": "scp public/* root@odroid1:/services/konsum/frontend/",
    "package": "npm-pkgbuild pkgbuild pacman makepkg",
    "prepare": "rollup -c",
    "start": "light-server -s public --servePrefix {{urlPrefix}} --historyindex {{urlPrefix}}/index.html -p 5000 --proxypath {{api}} -x {{proxyTarget}} -w src/**,public/** # rollup -c"
  },
  "dependencies": {
    "mf-styling": "git+https://github.com/arlac77/mf-styling.git",
    "svelte-guard-history-router": "git+https://github.com/arlac77/svelte-guard-history-router.git",
    "svelte-session-manager": "git+https://github.com/arlac77/svelte-session-manager.git",
    "svelte-time-series": "git+https://github.com/arlac77/svelte-time-series.git"
  },
  "devDependencies": {
    "@semantic-release/exec": "^3.3.6",
    "light-server": "^2.6.3",
    "npm-pkgbuild": "^6.9.0",
    "rollup": "^1.20.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.1.0",
    "rollup-plugin-terser": "^5.1.1",
    "semantic-release": "^15.13.24",
    "svelte": "^3.9.1"
  },
  "engines": {
    "node": ">=12.9.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/konsum-frontend-svelte.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/konsum-frontend-svelte/issues"
  },
  "homepage": "https://github.com/arlac77/konsum-frontend-svelte#readme",
  "config": {
    "api": "/services/konsum/api",
    "proxyTarget": "https://mfelten.dynv6.net",
    "urlPrefix": "/services/konsum"
  },
  "pacman": {
    "groups": "home automation",
    "hooks": "pacman/install.sh",
    "installdir": "/services/konsum/frontend",
    "content": {
      "${installdir}/": {
        "base": "public"
      },
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    },
    "depends": {
      "systemd": ">=242.32",
      "nginx-mainline": ">=1.17.3"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template-svelte-app.git"
    }
  }
}
