{
  "name": "konsum-frontend-svelte",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "description": "svelte web frontend for konsum",
  "keywords": [
    "konsum",
    "svelte",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    },
    {
      "name": "Konstantin Karpman"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "test": "npm run test:ava && npm run test:cafe",
    "test:cafe": "testcafe $BROWSER:headless tests/cafe/*.js -s build/test --app-init-delay 7000 --app vite",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cafeHead": "testcafe chrome tests/cafe/deleteValues.js -s build/test",
    "startkonsum": "node_modules/konsum/src/konsum-cli.mjs -c tests/config start",
    "startfrontend": "npm run dev",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview"
  },
  "dependencies": {
    "imask": "^6.2.2",
    "install": "^0.13.0",
    "layercake": "^5.0.0",
    "mf-styling": "arlac77/mf-styling",
    "npm": "^7.22.0",
    "streamsaver": "^2.0.5",
    "svelte-command": "^1.1.4",
    "svelte-common": "^4.4.12",
    "svelte-guard-history-router": "^4.2.17",
    "svelte-session-manager": "^2.0.7"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/release-notes-generator": "^10.0.2",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.24",
    "ava": "^3.15.0",
    "konsum": "github:konsumation/konsum",
    "npm-pkgbuild": "^6.12.52",
    "semantic-release": "^18.0.0",
    "testcafe": "^1.16.0",
    "vite": "^2.5.10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/konsumation/konsum-frontend-svelte.git"
  },
  "bugs": {
    "url": "https://github.com/konsumation/konsum-frontend-svelte/issues"
  },
  "homepage": "https://github.com/konsumation/konsum-frontend-svelte#readme",
  "config": {
    "api": "/services/konsum/api",
    "base": "/services/konsum",
    "proxyTarget": "http://localhost:12345",
    "title": "Konsum"
  },
  "pacman": {
    "content": {
      "${installdir}/": {
        "base": "build"
      },
      "/etc/nginx/sites/common/${name}.conf": "pacman/nginx.conf"
    },
    "depends": {
      "nginx-mainline": ">=1.21.1",
      "konsum": ">=4.1.0"
    },
    "groups": "home automation",
    "hooks": "pacman/hooks.sh",
    "installdir": "/services/konsum/frontend"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} pkgbuild pacman makepkg"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "template": {
    "properties": {
      "testcafe": {
        "options": "--app-init-delay 7000"
      }
    },
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-ava",
      "arlac77/template-vite",
      "arlac77/template-testcafe",
      "konsumation/template"
    ]
  }
}
